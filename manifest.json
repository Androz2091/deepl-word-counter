{
    "manifest_version": 2,
    
    "name": "DeepL Word Counter",
    "version": "1.0.0",
    "description": "Adds the number of words when you're typing at DeepL.com",

    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    
    "content_scripts": [{
        "js": ["content.js"],
        "matches": ["https://www.deepl.com/translator*"],
        "run_at": "document_end"
    }]
 
}
